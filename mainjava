import java.time.LocalDateTime;

public class Main {
    public static void main(String[] args) {
        Evento feira = new Evento(
            "101",
            "Feira de Empregos 2025",
            "Centro de Convenções",
            CategoriaEvento.FEIRA_EMPREGOS,
            LocalDateTime.now().plusDays(2).withHour(9).withMinute(0),
            480,
            "Conecte-se com empresas e explore oportunidades de carreira."
        );

        feira.adicionarParticipante("Empresa TechX");
        feira.adicionarParticipante("João Silva (Dev)");
        feira.adicionarParticipante("Maria Souza (RH)");

        Evento hackathon = new Evento(
            "102",
            "Hackathon Inovação 2025",
            "Hub de Startups",
            CategoriaEvento.HACKATHON,
            LocalDateTime.now().plusDays(5).withHour(18).withMinute(0),
            720,
            "Maratona de programação para criar soluções inovadoras."
        );

        hackathon.adicionarParticipante("Time Alpha");
        hackathon.adicionarParticipante("Time Beta");

        System.out.println(feira);
        System.out.println("Participantes: " + feira.getParticipantes());

        System.out.println(hackathon);
        System.out.println("Participantes: " + hackathon.getParticipantes());
    }
}
